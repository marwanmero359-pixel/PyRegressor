%Imports
  
import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

from sklearn.model_selection import train_test_split

%load data

mat = pd.read_csv("../data/student-mat.csv", sep=";")
por = pd.read_csv("../data/student-por.csv", sep=";")

mat["subject"] = "math"
por["subject"] = "portuguese"

datasets = {"Math": mat, "Portuguese": por}

%train/test split

def split_df(df, test_size=0.30, random_state=1):
    train_df, test_df = train_test_split(df, test_size=test_size, random_state=random_state)
    return train_df, test_df

%%Summary Tables

for name, df in datasets.items():
    print("\n", "="*30, name, "="*30)
    print(df.info())
    print(df.describe())

%%Plots

def plot_g3_hist(df, title_suffix=""):
    plt.figure(figsize=(6,4))
    plt.hist(df["G3"], bins=20)
    plt.xlabel("Final Grade (G3)")
    plt.ylabel("Number of Students")
    plt.title(f"Distribution of Final Grades {title_suffix}".strip())
    plt.show()

def plot_absences_scatter(df, title_suffix=""):
    plot_df = df[df["absences"] <= 30]
    plt.figure(figsize=(6,4))
    plt.scatter(plot_df["absences"], plot_df["G3"], alpha=0.4)
    plt.xlabel("Absences")
    plt.ylabel("Final Grade (G3)")
    plt.title(f"Absences vs Final Grade (Absences â‰¤ 30) {title_suffix}".strip())
    plt.show()

def plot_studytime_box(df, title_suffix=""):
    plt.figure(figsize=(6,4))
    sns.boxplot(x=df["studytime"], y=df["G3"])
    plt.xlabel("Study Time (1 = low, 4 = high)")
    plt.ylabel("Final Grade (G3)")
    plt.title(f"Study Time vs Final Grade {title_suffix}".strip())
    plt.show()

def plot_alcohol_box(df, title_suffix=""):
    plt.figure(figsize=(6,4))
    sns.boxplot(x=df["Walc"], y=df["G3"])
    plt.xlabel("Weekend Alcohol Consumption (Walc)")
    plt.ylabel("Final Grade (G3)")
    plt.title(f"Alcohol Consumption vs Final Grade {title_suffix}".strip())
    plt.show()

def plot_traveltime_violin(df, title_suffix=""):
    plt.figure(figsize=(6,4))
    sns.violinplot(x="traveltime", y="G3", data=df, inner="quartile")
    plt.xlabel("Travel Time (1 = short, 4 = long)")
    plt.ylabel("Final Grade (G3)")
    plt.title(f"Distribution of Final Grades by Travel Time {title_suffix}".strip())
    plt.show()

def plot_internet_violin(df, title_suffix=""):
    plt.figure(figsize=(6,4))
    sns.violinplot(x="internet", y="G3", data=df, inner="quartile")
    plt.xlabel("Internet Access")
    plt.ylabel("Final Grade (G3)")
    plt.title(f"Distribution of Final Grades by Internet Access {title_suffix}".strip())
    plt.show()


%%plot per dataset

for name, df in datasets.items():
    plot_g3_hist(df, f"({name})")
    plot_absences_scatter(df, f"({name})")
    plot_studytime_box(df, f"({name})")
    plot_alcohol_box(df, f"({name})")
    plot_traveltime_violin(df[df["absences"] <= 30], f"({name})")
    plot_internet_violin(df[df["absences"] <= 30], f"({name})")
